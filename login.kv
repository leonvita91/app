<Mygrid>: 
    name:name
    password:password
    result:result
    
    GridLayout:
        cols: 1
        rows: 3
        size: root.width , root.height
        GridLayout:
            cols:2
            rows: 3
            Label:
                size_hint_y: 1
                text: "Username:"
                font_size: 48
            TextInput:
                id:name
                size_hint_y: 0.1
                multiline: False
            Label:
                size_hint_y: 3
                text: "Password"
                font_size: 48
            TextInput:
                id:password
                size_hint_y: 0.1
                multiline: False           
        Label:
            id:result
            text: "Result:"
            font_size: 48
        Button:
            size_hint_y: 0.1
            text: 'submit'
            font_size: 20
            on_press: root.press()